      <row>
      <action>NoOp</action>
      <bind>9</bind>
      <bind>Shift+7</bind>
      <bind>Shift+8</bind>
      <bind>Shift+9</bind>
      </row>
      
      
    <!-- Hidden Commands -->
      <row>
        <action>SetGrace</action>
        <hidden>true</hidden>
      </row>  
      <row>
