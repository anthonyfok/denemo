<!-- Bookmarks -->

      <row>
        <action>RehearsalMark</action>
        <bind>F9</bind>
      </row>
      <row>
        <action>PrevBookmark</action>
        <bind>F11</bind>
      </row>    
      <row>
        <action>NextBookmark</action>
        <bind>F12</bind>
      </row>
      <row>
        <action>BookmarkNamed</action>
        <bind>Shft+F9</bind>
      </row>
      <row>
        <action>BookmarkNonPrinting</action>
        <bind>Shft+Alt+F9</bind>
      </row>
      <row>
        <action>SearchBookmark</action>
        <bind>F10</bind>
      </row>



<!-- Modification and Alteration -->

      <row>
        <action>ShiftUp</action>
        <bind>w</bind>
      </row>
      
      <row>
        <action>ShiftDown</action>
        <bind>s</bind>
      </row>
      
      <row>
        <action>Diminish</action>
        <bind>a</bind>
      </row>
      
      <row>
        <action>Augment</action>
        <bind>d</bind>
      </row>
      
      <row>
        <action>OctaveUp</action>
        <bind>W</bind>
      </row>
      <row>
        <action>OctaveDown</action>
        <bind>S</bind>
      </row> 
      <row>
        <action>Sharpen</action>
        <bind>plus</bind>
      </row>
      <row>
        <action>Flatten</action>
        <bind>minus</bind>
      </row>
	  <row>
        <action>CautionaryAccidental</action>
        <bind>Alt+minus</bind> 
      </row>
      <row>
        <action>ReminderAccidental</action>
       <bind>Alt+plus</bind>
      </row>
   
      <row>
        <action>AddDot</action>
        <bind>period</bind>
      </row>
      <row>
        <action>RemoveDot</action>
        <bind>Alt+period</bind>
      </row>
      
      <row>
		<action>DuplicateChord</action>
		<bind>e</bind>
      </row>
      
      <row>
		<action>SplitChord</action>
		<bind>Alt+s</bind>
      </row>
      
      <row>
        <action>GraceNoteSwitcher</action> <!-- TODO: binding -->
      </row>     
      
<!-- Delete -->
      <row>
        <action>DeletePreviousObject</action>
        <bind>BackSpace</bind>
      </row>
      <row>
        <action>IntelligentDelete</action>
        <bind>Delete</bind>
      </row>
      <row>    
        <action>RemoveNoteFromChord</action>
        <bind>Alt+Return</bind>
        <bind>Shft+Delete</bind>
      </row>
      
      
<!-- Function-keys F1 - F4 -->
<!-- <row>
        <action>Help</action>
        <bind>F1</bind>
      </row> -->
      <row>
        <action>ExecuteScheme</action>
