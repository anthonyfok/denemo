<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>Denemo Composer Shortcuts</title>
    <author>NG</author>
    <!-- Table Of Content
		=================
		System Control, Ctrl+ Bindings
		Copy, Paste, Undo, Selections
		Cursor Keys and their Selection variants
		Ctrl Mods to extend the range of cursors
    	Staff Navigation
    	Voice Navigation
    	Jumps (Home, End etc. )
    	Movement Controls 
    	Seek
    	Bookmarks
    	Modification and Alteration
    	Delete
    	Function-keys F1 - F4
    	Numberkeys
    	Hidden Commands
    -->
        
    <map>
	<!-- System Control , Ctrl+ Bindings-->
	<row>
        <action>New</action>
        <bind>Ctrl+n</bind>
      </row>
      <row>
        <action>OpenNewWindow</action>
        <bind>Ctrl+o</bind>
      </row>
      <row>
        <action>Save</action>
        <bind>Ctrl+s</bind>
      </row>
      <row>
        <action>SaveAs</action>
        <bind>Ctrl+S</bind>
      </row>
      <row>
        <action>NewWindow</action>
        <bind>Ctrl+t</bind>
      </row>
       <row>
        <action>PrintPreview</action>
        <bind>Ctrl+P</bind>
      </row>
      <row>
        <action>Print</action>
        <bind>Ctrl+p</bind>
      </row>
     <row>
        <action>Close</action>
        <bind>Ctrl+w</bind>
      </row>
      <row>
        <action>Quit</action>
        <bind>Ctrl+q</bind>
      </row>    


<!-- Copy, Paste, Undo, Selections -->

<!--
      <row>
        <action>Undo</action>
      </row>
      <row>
        <action>Redo</action>
      </row>
      <row>
        <action>PasteClipboard</action>
        <tooltip>Paste LilyPond notes from the text clipboard</tooltip>
      </row>
    -->
      <row>
        <action>Copy</action>
        <bind>Ctrl+c</bind>
      </row>
      <row>
        <action>Cut</action>
        <bind>Ctrl+x</bind>
      </row>
      <row>
        <action>Paste</action>
        <bind>Ctrl+v</bind>
      </row>   
      <row>
        <action>SelectStaff</action>
        <bind>Ctrl+a</bind>
      </row>
      <row>
        <action>SelectAllStaffs</action>
        <bind>Ctrl+A</bind>
      </row>      
      <row>
        <action>UnsetMark</action>
        <bind>space</bind>
      </row>    
    
<!-- Cursor Keys and their Selection variants -->
      <row>
        <action>MoveCursorLeft</action>
        <bind>Left</bind>
      </row>
      <row>
        <action>MoveCursorRight</action>
        <bind>Right</bind>
      </row>

      <row>
        <action>CursorDown</action>
        <bind>Down</bind>
        <bind>Shft+Down</bind>
      </row>
      <row>
        <action>CursorUp</action>
        <bind>Up</bind>
        <bind>Shft+Up</bind>
      </row>
     
      <row>
        <action>CursorLeft</action>
        <hidden>true</hidden>
        <bind>Shft+Left</bind>
      </row>

      <row>
        <action>CursorRight</action>
        <hidden>true</hidden>
        <bind>Shft+Right</bind>
      </row>
       
	<!-- Ctrl Mods to extend the range of cursors -->      

      <row>
        <action>MeasureLeft</action>
        <hidden>true</hidden>
        <bind>Ctrl+Shft+Left</bind>
      </row>
      <row>
        <action>MeasureRight</action>
        <hidden>true</hidden>
        <bind>Ctrl+Shft+Right</bind>
      </row>
      <row>
        <action>MoveToMeasureLeft</action>
        <bind>Ctrl+Left</bind>
      </row>
      <row>
        <action>MoveToMeasureRight</action>
        <bind>Ctrl+Right</bind>
      </row>      
      
	<!-- Staff Navigation -->
       <row>
        <action>StaffUp</action>
        <hidden>true</hidden>
        <bind>Ctrl+Shft+Up</bind>
      </row>
      <row>
        <action>StaffDown</action>
        <hidden>true</hidden>
        <bind>Ctrl+Shft+Down</bind>
      </row>
      <row>
        <action>MoveToStaffUp</action>
        <bind>Ctrl+Up</bind>
      </row>
      <row>
        <action>MoveToStaffDown</action>
        <bind>Ctrl+Down</bind>
      </row>
      
     <!-- Voice Navigation -->
      
      <row>
        <action>VoiceUp</action>
         <hidden>true</hidden>
	  </row>
      <row>
        <action>VoiceDown</action>
        <hidden>true</hidden>    
      </row>
      <row>
        <action>MoveToVoiceUp</action>
      </row>
      
      <row>
        <action>MoveToVoiceDown</action>
      </row>
      
 
	<!-- Jumps (Home, End etc. )-->
	
      <row>
        <action>GoToMeasure</action>
      </row>
      <row>
        <action>GoToBeginning</action>
        <hidden>true</hidden>
        <bind>Shft+Home</bind>
      </row>
      <row>
        <action>GoToEnd</action>
        <hidden>true</hidden>
        <bind>Shft+End</bind>
      </row>
      <row>
        <action>MoveToBeginning</action>
        <bind>Home</bind>
      </row>
      <row>
        <action>MoveToEnd</action>
        <bind>End</bind>
      </row>
      <row>
        <action>GoToEmptyMeasure</action>
		<bind>Alt+End</bind>
      </row>	
	
