<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>HalfBarline</action>
        <scheme>;;;Half Barline
(StandAloneDirectiveProto (cons "HalfBarline" "\\once \\override Staff . BarLine #'bar-size = #2 \\bar \"|\""))</scheme>
        <_label>Half Barline</_label>
        <_tooltip>Insert a barline with only half of its original size</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
