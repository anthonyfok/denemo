<?xml version="1.0" encoding="UTF-8"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>OnlyForLayout</after>
        <action>ForAllLayouts</action>
        <scheme>;;;;;;;; ForAllLayouts
 (let ((tag (d-DirectiveGetTag-standalone)) )
  (if tag
	(begin
		(d-DirectivePut-standalone-display tag "")
		(d-DirectivePut-standalone-x tag 0)
		(d-DirectivePut-standalone-y tag 0))))
(d-SetSaved #f)
(d-RefreshDisplay)
</scheme>
        <_label>Reset for All Layouts</_label>
        <_tooltip>Clears conditional behaviour of this layout. The Directive will apply to all score layouts.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
