<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>MetronomeMarking</action>
        <scheme>(let ((bpm 60))
  (set! bpm (d-GetUserInput "Metronome Setting" 
			       "Give Beats per Minute" "60"))
  (d-AttachLilyToChord   (string-append "postfix= \0prefix=\\override Score.MetronomeMark #'padding = #3
  \\tempo 4 = " bpm "\0display=MM" bpm)))
</scheme>
        <label>Add Metronome Marking to Chord</label>
        <tooltip>Adds a metronome marking to chord. Edit the attached LilyPond for the value and position.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
