<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>SmallerStaff</action>
        <scheme>;;;;;;;;;;;;;;;;Smaller Staff
(if (d-DirectiveGetForTag-staff "StaffSize")
	(begin
 	(d-DirectiveDelete-staff "StaffSize")
  	(d-ShowFiguredBass))
        (begin
  		(d-DirectivePut-staff-prefix "StaffSize" "\\new Staff \\with {\n
     		   fontSize = #-3\n
     		   \\override StaffSymbol #'staff-space = #(magstep -3)\n}\n &lt;&lt; {")
	(d-DirectivePut-staff-override "StaffSize" (logior DENEMO_OVERRIDE_LILYPOND DENEMO_OVERRIDE_GRAPHIC))
	(d-DirectivePut-staff-display "StaffSize" "Smaller Staff")
	(d-HideFiguredBass)))
(d-RefreshDisplay)


 </scheme>
        <label>Smaller Staff (On/Off)</label>
        <tooltip>Turns printing a smaller staff on/off. When on the staff will print in a smaller size. Use this for the solo part above a piano accompaniment</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
