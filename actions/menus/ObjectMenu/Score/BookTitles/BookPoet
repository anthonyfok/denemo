<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>BookPoet</action>
        <scheme>;;BookPoet
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-scoreheader-display "Poet")))
  (if (not chapter)
    (set! chapter "Poet"))
  (set! chapter (d-GetUserInput "Poet/Lyricist" "Give a poet or lyricist for the score" chapter))
   (d-SetSaved #f)
  (if (string-null? chapter)
  	(d-DirectiveDelete-scoreheader "Poet")
  	(begin
  			(d-DirectivePut-scoreheader-display "Poet")
    	  	(d-DirectivePut-scoreheader-postfix "Poet" (string-append "poet = \"" chapter "\"\n")))))
</scheme>
        <label>Poet/Lyricist</label>
        <tooltip>Prints the poet or lyricist name on title page</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
