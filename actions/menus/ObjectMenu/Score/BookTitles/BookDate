<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>BookPoet</after>
        <action>BookDate</action>
        <scheme>;;BookDate
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-scoreheader-display "Date")))
  (if (not chapter)
    (set! chapter "Date"))
  (set! chapter (d-GetUserInput "Composition Date" "Give the date for the score" chapter))
   (d-SetSaved #f)
  (if (string-null? chapter)
  	(d-DirectiveDelete-scoreheader "Date")
  	(begin
  	(d-DirectivePut-scoreheader-display "Date" chapter)
      	(d-DirectivePut-scoreheader-postfix "Date" (string-append "date = \"" chapter "\"\n")))))
</scheme>
        <label>Date</label>
        <tooltip>Prints a date on the title page.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
