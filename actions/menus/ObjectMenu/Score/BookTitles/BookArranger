<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>BookArranger</action>
        <scheme>;;BookArranger
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-scoreheader-postfix "Arranger")))
  (if (not chapter)
    (set! chapter "Arranger"))
  (set! chapter (d-GetUserInput "Book Title" "Give the arranger name for the score" chapter))
   (d-SetSaved #f)
  (if (string-null? chapter)
  	(d-DirectiveDelete-scoreheader "Arranger")
      	(d-DirectivePut-scoreheader-postfix "Arranger" (string-append "arranger = \"" chapter "\"\n"))))
</scheme>
        <label>Arranger</label>
        <tooltip>Prints the arranger name on title page</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
