<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ScoreComposer</after>
        <action>TitlePage</action>
        <scheme>;;;;;;;;;;;;;;;;;;; Title Page etc
(d-InsertMovementBefore)
(let ((title "No Title") (lily ""))
(set! title (d-GetUserInput "Title Page" "Give a title for your work" "My Sonata"))
(set! lily (string-append "\\markup {
  \\override #'(box-padding . 0.5)
  \\box
 {" title "  }
}
"))
(d-DirectivePut-movementcontrol-postfix  "TitlePage" lily)
(d-DirectivePut-movementcontrol-display "TitlePage" (string-append "This \"movement\" prints the title page only as " title ", put all music in the following movements"))
(d-DirectivePut-movementcontrol-override  "TitlePage" (logior DENEMO_OVERRIDE_LILYPOND DENEMO_OVERRIDE_GRAPHIC))
(d-RefreshDisplay))</scheme>
        <label>Create a Title Page</label>
        <tooltip>Prepends a dummy movement to hold a title page (no music)</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
