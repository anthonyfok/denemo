<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after/>
        <action>ScoreOpus</action>
        <scheme>;;;ScoreOpus
	(if (d-PreviousMovement)
		(d-WarningDialog "Returning to the first Movement to set this."))
	(while (d-PreviousMovement)
		(display "Seeking first movement"))
        (SetHeaderField "opus")
        (d-DirectivePut-paper-postfix "PrintAllHeaders" "printallheaders = ##t\n")
        (d-RefreshDisplay)
        </scheme>
        <label>Opus</label>
        <tooltip>Name of the opus, flush-right below the arranger.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
