<?xml version="1.0" encoding="UTF-8"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>EditScoreDirective</after>
        <action>ScoreComment</action>
        <scheme>;;;;;;;;;;;;;;
(d-DirectivePut-score-override "ScoreComment" (logior DENEMO_OVERRIDE_GRAPHIC DENEMO_OVERRIDE_EDITOR))
(d-DirectivePut-score-display "ScoreComment" (_ "Click to edit comment"))
</scheme>
        <_label>Comment</_label>
        <_tooltip>Stores any textual commentary you may have for this score.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
