<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>BookComposer</action>
        <scheme>;;BookComposer
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-scoreheader-postfix "Composer")))
  (if (not chapter)
    (set! chapter "Composer"))
  (set! chapter (d-GetUserInput "Composer Name" "Give the name of the composer for the score" chapter))
   (d-SetSaved #f)
  (if (string-null? chapter)
  	(d-DirectiveDelete-scoreheader "Composer")
      	(d-DirectivePut-scoreheader-postfix "Composer" (string-append "composer = \"" chapter "\"\n"))))
</scheme>
        <label>Composer</label>
        <tooltip>Prints a composer name on title page</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
