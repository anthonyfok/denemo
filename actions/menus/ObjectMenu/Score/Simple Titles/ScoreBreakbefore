<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after/>
        <action>ScoreBreakbefore</action>
        <scheme>;;;ScoreBreakbefore
	(if (d-PreviousMovement)
		(d-WarningDialog "Returning to the first Movement to set this."))
	(while (d-PreviousMovement)
		(display "Seeking first movement"))
        (SetHeaderField "opus")
        (DenemoPrintAllHeaders)
        (d-RefreshDisplay)
        </scheme>
        <label>Breakbefore</label>
        <tooltip>This forces the title to start on a new page (set to ##t or ##f).</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
