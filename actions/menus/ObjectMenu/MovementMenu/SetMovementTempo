<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>SwapMovements</after>
        <action>SetMovementTempo</action>
        <scheme>;;;SetMovementTempo
(define MovementTempo:value (number-&gt;string (d-MovementTempo)))
(set! MovementTempo:value (d-GetUserInput (_ "Tempo of Movement") (_ "Give quarter notes per minute:") MovementTempo:value))
(set!  MovementTempo:value (number-&gt;string (d-MovementTempo MovementTempo:value)))
(d-RefreshDisplay)
</scheme>
        <label>MIDI Tempo</label>
        <tooltip>Sets the (initial) tempo in quarter notes per minute.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
