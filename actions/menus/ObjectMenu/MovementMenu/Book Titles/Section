<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>Section</action>
        <scheme>;;;Section
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-movementcontrol-prefix "Section")))
  (if (not chapter)
    (set! chapter "Movement Sub-Title"))
  (set! chapter (d-GetUserInput "Movement Sub-Title" "Give a subtitle for the current movement" chapter))
  (if chapter
    (begin
      (d-SetSaved #f)
      (d-DirectivePut-movementcontrol-prefix "Section" (string-append "\\section \"" chapter "\"\n")))
    (d-WarningDialog "Movement Sub-Title unchanged")))
</scheme>
        <label>Sub-Title</label>
        <tooltip>Prints a subtitle for the Movement</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
