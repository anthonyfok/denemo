<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>MovementTitle</after>
        <action>Chapter</action>
        <scheme>;;;Chapter
(d-LilyPondInclude "book-titling.ily")
(let ((chapter (d-DirectiveGet-movementcontrol-display "Chapter")))
  (if (not chapter)
    (set! chapter "Movement Title"))
  (set! chapter (d-GetUserInput "Movement Title" "Give a title for the current movement\nOr blank to delete" chapter))
  (if chapter
    (begin
      (d-SetSaved #f)
      (if (string-null? chapter)
      	(d-DirectiveDelete-movementcontrol "Chapter")
        (begin 
        	(d-DirectivePut-movementcontrol-prefix "Chapter" (string-append "\\chapter \"" chapter "\"\n"))
        	(d-DirectivePut-movementcontrol-display "Chapter" chapter))))
    (d-WarningDialog "Movement Title unchanged")))
</scheme>
        <label>Title</label>
        <tooltip>Prints title of Movement</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
