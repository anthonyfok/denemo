<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ClosingBarline</after>
        <action>OpenFirstTimeBar</action>
        <scheme>;;;InsertFirstTimeBarStart
(d-Directive-standalone "Volta")
(d-DirectivePut-standalone-minpixels  "Volta" 30)
(d-DirectivePut-standalone-postfix "Volta" "
\\set Score.repeatCommands = #'((volta \"1\"))
")
(d-DirectivePut-standalone-gy  "Volta" -33)
(d-DirectivePut-standalone-graphic "Volta" "FirstTimeBar")
(d-RefreshDisplay)
 </scheme>
        <label>Start a First Time Bar</label>
        <tooltip>(Print) start a first time bar, must be followed by CloseVolta.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
