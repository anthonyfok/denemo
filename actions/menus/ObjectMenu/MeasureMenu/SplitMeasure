<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>SplitMeasure</action>
        <scheme> ;;;SplitMeasure
(d-PushClipboard) 
(d-SetMark)
(if (d-MeasureRight)  
   (begin
		(d-CursorLeft)  
        (d-Cut)
        (d-CursorRight)
        (d-InsertMeasureBefore)       
        )
   (begin
        (d-GoToEnd)
        (d-Cut)
        (d-InsertMeasureAfter)
        (d-MeasureRight)
      )
 ) 
(d-Paste)
(d-MoveToMeasureLeft)
(d-GoToMeasureEnd)
(d-PopClipboard) ; Restore old Clipboard

</scheme>
        <label>Split Measure (insert barline)</label>
        <tooltip>Insert a barline before cursor.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
