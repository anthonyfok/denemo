<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>InsertMeasure</after>
        <action>SplitMeasure</action>
        <scheme> ;;;SplitMeasure
(d-PushClipboard) 
(d-PushPosition) 
(d-SetMark)
(if (d-MeasureRight)  
   (begin
		(d-CursorLeft)  
        (d-Cut)
        (d-CursorRight)
        (d-InsertMeasureBefore)       
        )
   (begin
        (d-GoToEnd)
        (d-Cut)
        (d-InsertMeasureAfter)
        (d-MeasureRight)
      )
 ) 
(d-Paste)
(d-PopPosition)
(d-MoveCursorLeft) ; Cursor Position after Pop is still on the old note which is now in a new measure, go one step left to return to the editing position.
(d-PopClipboard) ; Restore old Clipboard

</scheme>
        <label>Split Measure</label>
        <tooltip>Insert a barline before cursor. Do not use for inserting empty measure.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
