<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ContinuousLyricEntry</action>
        <scheme>;;;; Continuous Lyric entry.
(let ((lyric ""))
(set! lyric (d-GetUserInput "Lyric Entry" "Syllable current note:" ""))
(while (and (not (boolean? lyric)) (not (equal? lyric "")))
    (begin
    (d-EditLyric lyric)
    (d-RefreshDisplay)
    (if  (d-NextNote)
	 (set! lyric (d-GetUserInput "Lyric Entry" "Syllable current note:" ""))
	 (set! lyric "")))))
(d-PlayMidiKey #xF01A01)
(d-PlayMidiKey #xF02A01)
</scheme>
        <label>Enter Lyrics</label>
        <tooltip>Enter lyrics on successive notes. Press return for each syllable. Use blank to finish, or cancel button</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
