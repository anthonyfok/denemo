<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>SetBreve</after>
        <action>SetLonga</action>
        <scheme>;;;;;;;;;;;;;;; SetLonga
(if (and (defined? 'Snippet::Longa) (&gt; Snippet::Longa 0))
    (d-SelectSnippet Snippet::Longa)
(begin
(d-PushPosition)
(d-InsertMeasureBefore)
(d-Insert0)
(d-DirectivePut-chord-graphic "Longa" "noteheads_sM2neomensural")
	(d-DirectivePut-chord-override "Note" (logior DENEMO_OVERRIDE_GRAPHIC DENEMO_ALT_OVERRIDE))
	(d-DirectivePut-chord-prefix "Note" "\\longa ")
	(d-DirectivePut-chord-prefix "NoteHead" "\\neohead ")
	(d-DirectivePut-chord-override "NoteHead" DENEMO_OVERRIDE_AFFIX)		
(d-SetDurationInTicks (* 4 1536))
(d-CreateSnippetFromObject "Longa")
(d-DeleteMeasure)
(d-PopPosition)))
</scheme>
        <label>Longa</label>
        <tooltip>Sets Longa as the prevailing duration, installing it as a musical snippet.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
