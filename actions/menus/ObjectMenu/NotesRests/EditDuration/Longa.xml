<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <after>Breve</after>
        <action>Longa</action>
        <scheme>;;Longa
(d-0)
(d-MoveCursorLeft)
(d-ChangeLonga)
(d-MoveCursorRight)
(if (and (defined? 'Snippet::Longa) (&gt; Snippet::Longa 0))
    (d-SelectSnippet Snippet::Longa)
    (d-CreateSnippetFromObject "Longa"))
</scheme>
        <_label>Longa</_label>
        <_tooltip>Append/Insert Longa duration</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
