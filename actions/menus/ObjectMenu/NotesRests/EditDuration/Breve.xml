<?xml version="1.0" encoding="UTF-8"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <after>InsertRhythm</after>
        <action>Breve</action>
        <scheme>;;Breve
(d-0)
(d-MoveCursorLeft)
(d-ChangeBreve)
(d-MoveCursorRight)
(if (and (defined? 'Snippet::Breve) (&gt; Snippet::Breve 0))
    (d-SelectSnippet Snippet::Breve)
    (d-CreateSnippetFromObject "Breve"))

</scheme>
        <_label>Breve</_label>
        <_tooltip>Append/Insert Breve</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
