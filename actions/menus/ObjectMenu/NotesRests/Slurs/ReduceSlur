<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ExtendSlur</after>
        <action>ReduceSlur</action>
        <scheme> ;;;ReduceSlur
  (if (d-IsSlurEnd)
    (begin 	
	(d-ToggleEndSlur)
	(d-PrevChord)
	(if (d-IsSlurStart)
		(d-ToggleBeginSlur)
	(d-ToggleEndSlur)))
   (begin
   	(if (d-PrevChord)
   		(if (d-IsSlurEnd)
   			(begin 	
				(d-ToggleEndSlur)
				(d-PrevChord)
				(if (d-IsSlurStart)
				(d-ToggleBeginSlur)
				(d-ToggleEndSlur)))))))



</scheme>
        <label>Shorten Slur from End</label>
        <tooltip>Shorten a slur that ends at the cursor.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
