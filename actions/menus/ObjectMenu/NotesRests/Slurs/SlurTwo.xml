<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>SlurTwo</action>
        <scheme>;;;SlurTwo
(if (Music?)
(begin
	(d-ToggleBeginSlur)
	(if (d-NextChord)
		(d-ToggleEndSlur)
		(d-ToggleBeginSlur))
	(d-NextChord)))
</scheme>
        <_label>Slur with Next Note</_label>
        <_tooltip>Creates a slur from current note to next note.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
