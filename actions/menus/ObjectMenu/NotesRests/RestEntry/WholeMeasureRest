<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>EnterRest</after>
        <action>WholeMeasureRest</action>
        <scheme>;;;WholeMeasureRest
(let ((timesig #f))	
  (set! timesig (d-InsertTimeSig "query=timesigname"))	
   (d-Directive-standalone "WholeMeasureRest")	
   (d-SetDurationInTicks (* 1536 (GetPrevailingTimeSig #t)))
   (d-DirectivePut-standalone-graphic "WholeMeasureRest" "WholeMeasureRest" )
 ; (d-DirectivePut-standalone-gx "WholeMeasureRest" 10)
   (d-DirectivePut-standalone-gy "WholeMeasureRest" -7)
   ;(d-DirectivePut-standalone-minpixels "WholeMeasureRest" 0)
   (d-DirectivePut-standalone-override "WholeMeasureRest" DENEMO_OVERRIDE_GRAPHIC)
   (d-DirectivePut-standalone-postfix "WholeMeasureRest" (string-append "R1*" timesig))
   (d-MoveCursorRight)
   (d-RefreshDisplay))
   </scheme>
        <label>Whole Measure Rest</label>
        <tooltip>Inserts a whole measure rest at the cursor</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
