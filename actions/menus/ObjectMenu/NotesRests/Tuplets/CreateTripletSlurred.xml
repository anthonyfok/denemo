<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <after>CreateTriplet</after>
        <action>CreateTripletSlurred</action>
        <_label>Create Slurred Triplet</_label>
        <_tooltip>If MIDI input is active, duplicates the current note twice making a triplet and slurring all three notes, otherwise runs the ToggleTripleting command which alternately inserts start and end triplet objects.</_tooltip>
        <scheme>;;CreateTripletSlurred
(if  (MidiInput?)
	(begin
	    (if (Appending?)
			(d-MoveCursorLeft))
	    (if (Music?)
   		(let ((duration (d-GetNoteBaseDuration)))
			(d-StartTriplet)
			(d-MoveCursorRight)
			(d-ToggleBeginSlur)
  			(eval-string (string-append "(d-" (number-&gt;string duration) ")"))
        		(d-SetNonprinting)
   			(eval-string (string-append "(d-" (number-&gt;string duration) ")"))
        		(d-SetNonprinting)    
        		(d-ToggleEndSlur)		
			(d-EndTuplet))))
	(d-ToggleTripleting))
</scheme>
      </row>
    </map>
  </merge>
</Denemo>
