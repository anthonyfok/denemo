<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <after>ToggleTupletNumbering</after>
        <action>ToggleTripleting</action>
        <scheme>;;;;ToggleTripleting
(if  ToggleTripleting::InsideTriplet
       (begin 
       		(d-PendingMidi 72)
       		(d-StartTriplet))
       	(begin
       		(d-PlayMidiNote 77 255 9 100)
      	 	(d-EndTuplet)))
(set! ToggleTripleting::InsideTriplet (not ToggleTripleting::InsideTriplet))
</scheme>
        <_label>Toggle Triplet Entry (Off/On)</_label>
        <_tooltip>Inserts a start triplet or end tuplet alternately.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
