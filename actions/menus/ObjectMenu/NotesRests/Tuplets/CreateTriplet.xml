<?xml version="1.0" encoding="UTF-8"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <after>ToggleTupletBracketsIfBeamed</after>
        <action>CreateTriplet</action>
        <_label>Create Triplet</_label>
        <_tooltip>Takes the current note and appends two more making all three a triplet.</_tooltip>
        <scheme>;;;CreateTriplet
(if  (and (MidiInput?) (Appending?))
	(begin  
	    (d-MoveCursorLeft)
	    (if (Music?)
   		(let ((duration (d-GetNoteBaseDuration)))
			(d-StartTriplet)
			(d-MoveCursorRight)
  			(eval-string (string-append "(d-" (number-&gt;string duration) ")"))
        		(d-SetNonprinting)
   			(eval-string (string-append "(d-" (number-&gt;string duration) ")"))
        		(d-SetNonprinting)  			
			(d-EndTuplet))
		 (begin
		 	(d-MoveCursorRight)
		 	(d-ToggleTripleting))))
	(d-ToggleTripleting))
</scheme>
      </row>
    </map>
  </merge>
</Denemo>
