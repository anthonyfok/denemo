<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ToggleArpeggio</action>
        <scheme>;;;ToggleArpeggio
        (ChordAnnotation "ToggleArpeggio" "\\arpeggio"    ToggleArpeggio::params    LG-Arpeggio)
				(if (d-Directive-chord? "ToggleArpeggio")
						(d-DirectivePut-chord-gx "ToggleArpeggio" -5))</scheme>
        <label>Arpeggio (Off/On)</label>
        <tooltip>Mark/Unmark chord with an arpeggio</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
