<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ToggleDownBow</after>
        <action>ToggleHarmonic</action>
        <scheme>;;;ToggleHarmonic
(let ((tag "Harmonic"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag LG-Harmonic)
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		;use _instead of ^ to place harmonic below note
		(d-DirectivePut-chord-postfix tag "^\\flageolet")))
(d-SetSaved #f))
</scheme>
        <label>Harmonic</label>
        <tooltip>Mark/Unmark chord with a harmonic</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
