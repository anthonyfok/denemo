<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ToggleStaccato</after>
        <action>ToggleFermata</action>
        <scheme>;;;ToggleFermata
(let ((tag "Fermata"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag LG-Fermata)
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		(d-DirectivePut-chord-postfix tag "\\fermata")))
(d-SetSaved #f))

</scheme>
        <label>Fermata (Off/On)</label>
        <tooltip>Mark/Unmark the chord with a fermata</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
