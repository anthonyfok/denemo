<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ToggleAccent</after>
        <action>ToggleStaccato</action>
        <scheme>;;;ToggleStaccato
(let ((tag "Staccato"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag LG-Staccato)
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		(d-DirectivePut-chord-postfix tag "\\staccato")))
(d-SetSaved #f))

</scheme>
        <label>Staccato</label>
        <tooltip>Mark/Unmark the chord staccato</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
