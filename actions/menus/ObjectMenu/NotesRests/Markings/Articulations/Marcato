<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>Marcato</action>
        <scheme>;;;Marcato
(let ((tag "Marcato"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag "
&#xE172;
emmentaler
56")
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		(d-DirectivePut-chord-postfix tag "\\marcato")))
(d-SetSaved #f))

</scheme>
        <label>Marcato</label>
        <tooltip>Mark/Unmark the current chord marcato</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
