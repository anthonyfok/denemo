<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ToggleFermata</after>
        <action>ToggleTenuto</action>
        <scheme>;;;ToggleTenuto
(let ((tag "Tenuto"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag LG-Tenuto)
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		(d-DirectivePut-chord-postfix tag "\\tenuto")))
(d-SetSaved #f))
</scheme>
        <label>Tenuto</label>
        <tooltip>Mark/Unmark the chord Tenuto</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
