<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row type="scheme">
        <action>ToggleShortFermata</action>
        <scheme>;;;ToggleShortFermata
        (ChordAnnotation "ToggleShortFermata" "\\shortfermata"    ToggleShortFermata::params    LG-ShortFermata)
</scheme>
        <_label>ShortFermata (Off/On)</_label>
        <_tooltip>Mark/Unmark the current chord shortfermata</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
