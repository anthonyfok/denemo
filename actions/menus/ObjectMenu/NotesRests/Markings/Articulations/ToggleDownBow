<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ToggleUpBow</after>
        <action>ToggleDownBow</action>
        <scheme>;;;ToggleDownBow
(let ((tag "DownBow"))
(if (d-Directive-chord? tag)
	(d-DirectiveDelete-chord tag)
	(begin
		(d-DirectivePut-chord-graphic tag LG-DownBow)
		(d-DirectivePut-chord-override tag DENEMO_ALT_OVERRIDE)
		(d-DirectivePut-chord-postfix tag "\\downbow")))
(d-SetSaved #f))
</scheme>
        <label>DownBow</label>
        <tooltip>Mark/Unmark chord with a Down Bow</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
