<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>LHFinger</action>
        <scheme>;;;;;; LHFinger
(let ((tag "LHFinger") (num "0"))
	(set! num (d-GetKeypress))
	(if (string-&gt;number num) 
		(begin 
			(d-DirectivePut-note-display tag num)
			(d-DirectivePut-note-postfix tag  (string-append "-" num))
			(d-DirectivePut-note-minpixels tag 20)
			(d-DirectivePut-note-tx tag 10)
			(d-Chordize #t))
		(begin
			(d-DirectiveDelete-note tag)))
(d-SetSaved #f)
(d-RefreshDisplay))</scheme>
        <label>Left Hand Fingering</label>
        <tooltip>Followed by a number, print Left Hand fingering on note</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
