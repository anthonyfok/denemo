<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ChangeLonga</action>
        <scheme>;;;ChangeLonga
(d-SetLonga)
(if (string=? "CHORD" (d-GetType))
  (begin ; its a chord, means note or rest!
	(if (d-GetNote) ; Test if its a note with a name or not, then its a rest
		(begin ;note
			(d-Change0) ; Change to a full note first to get rid of note-stems 
			(d-DirectivePut-chord-graphic "Longa" "noteheads_sM2neomensural")
			(d-DirectivePut-chord-override "Longa" DENEMO_OVERRIDE_GRAPHIC)
			(d-DirectivePut-chord-prefix "Longa" "\\Longa ")
		)
		(begin ;rest
			(d-DirectivePut-chord-prefix "Longa" " \\longa ")
			(d-DirectivePut-chord-graphic "Longa" "rests_M2neomensural")
			(d-DirectivePut-chord-override "Longa" DENEMO_OVERRIDE_GRAPHIC)
		)	
	)
	(d-SetDurationInTicks (* 2 1536))
	(d-RefreshDisplay)
  )
  #f ; not a chord
)</scheme>
        <label>Longa</label>
        <tooltip>Change current note duration to Longa</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
