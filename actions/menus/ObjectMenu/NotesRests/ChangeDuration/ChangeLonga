<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ChangeLonga</action>
        <scheme>;;;ChangeLonga
(d-SetLonga)
(if (Music?)
  (begin ; its a chord, means note or rest!
	(if (Rest?) ; Test if its a note with a name or not, then its a rest
		(d-DirectivePut-chord-graphic "Note" "rests_M2neomensural") ;rest
		(begin ;note
			(d-Change0) ; Change to a full note first to get rid of note-stems 
			(d-DirectivePut-chord-graphic "Note" "noteheads_sM2neomensural")	
		)	
	)
	(d-DirectivePut-chord-prefix "Note" "\\longa ")
	(d-DirectivePut-chord-override "Note" DENEMO_OVERRIDE_GRAPHIC)
	(d-DirectivePut-chord-prefix "NoteHead" "\\neohead ")
	(d-DirectivePut-chord-override "NoteHead" DENEMO_OVERRIDE_AFFIX)	
	(d-SetDurationInTicks (* 4 1536))
	(d-RefreshDisplay)
  )
  #f ; not a chord
)</scheme>
        <label>Longa</label>
        <tooltip>Change current note duration to Longa</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
