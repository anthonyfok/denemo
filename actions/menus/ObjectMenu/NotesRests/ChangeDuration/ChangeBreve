<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ChangeBreve</action>
        <scheme>;;;ChangeBreve
(d-SetBreve)
(if (Music?)
  (begin
	(if (Rest?) ; Test if its a note with a name or not, then its a rest
		(d-DirectivePut-chord-graphic "Note" "rests_M1neomensural")  ;rest	
		(begin ;note
			(d-Change0) ; Change to a full note first to get rid of note-stems 
			(d-DirectivePut-chord-graphic "Note" "noteheads_sM1neomensural")
		)	
	)
	(d-DirectivePut-chord-override "Note" DENEMO_OVERRIDE_GRAPHIC)
	(d-DirectivePut-chord-postfix "Note" "\\breve ")
	(d-DirectivePut-chord-prefix "NoteHead" "\\neohead ")
	(d-DirectivePut-chord-override "NoteHead" DENEMO_OVERRIDE_AFFIX)		
	(d-SetDurationInTicks (* 2 1536))
	(d-RefreshDisplay)
  )
  #f ; not music
)</scheme>
        <label>Breve</label>
        <tooltip>Change current note duration to Breve</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
