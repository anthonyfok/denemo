<?xml version="1.0" encoding="UTF-8"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>EndBeam</after>
        <action>DeleteBeamingDirective</action>
        <scheme>;;; DeleteBeamingDirective
(d-DirectiveDelete-chord "Beam")
(d-DirectiveDelete-chord "BeamLeft")
(d-DirectiveDelete-chord "BeamRight")</scheme>
        <_label>Delete Beaming Directive</_label>
        <_tooltip>Deletes a ] or [ (end or start beam) directive on the current chord.</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
