        <action>MouseInsertion</action>
        <scheme>;;MouseInsertion
(d-AddKeybinding "InsertOneNote" "PrsL-CapsLock")
(d-AddKeybinding "A" "a")
(d-AddKeybinding "B" "b")
(d-AddKeybinding "C" "c")
(d-AddKeybinding "D" "d")
(d-AddKeybinding "E" "e")
(d-AddKeybinding "F" "f")
