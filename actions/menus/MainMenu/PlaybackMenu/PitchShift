<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ConvertMidiForBass</after>
        <action>PitchShift</action>
        <scheme>;;;PitchShift
(let ((val (d-GetUserInput "Pitch Change" "Give amount =/-" "10")))
(if val
	(begin 
		(set! val (string-&gt;number val))
		(set! val (+ 66 val))
		(if (&gt; val 127)
			(set! val 127))
		(if (&lt; val 0)
			(set! val 0))
		(set! val (number-&gt;string val))
		(disp "Pitch shift " val " and so "    (string-append "0xE0 0x00 " val)               "\n")
		(d-OutputMidiBytes (string-append "0xE0 0x00 " val)))))
</scheme>
        <label>Shift Pitch</label>
        <tooltip>Outputs a pitch bend signal to the synthesizer for the value +/- 64 given.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
