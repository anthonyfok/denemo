<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>PrintAccompanistsScore</after>
        <action>PrintWithAmbitus</action>
        <scheme>;;;;;;;;;PrintWithAmbitus
(define (PrintWithAmbitus::ambitize)
  (while (d-PreviousMovement))
  (let movement ()
    (while (d-MoveToStaffUp))
    (let staff ()
   	(ToggleDirective "staff" "prefix" "Ambitus" "\\with { \\consists \"Ambitus_engraver\" }")	
 	 (if (or (d-MoveToVoiceDown) (d-MoveToStaffDown))
		(staff)))
		(if (d-NextMovement)
		    (movement))))

(d-PushPosition)
(PrintWithAmbitus::ambitize)
(d-TypesetForScript "(d-PrintWithAmbitus)")
(PrintWithAmbitus::ambitize)
(d-PopPosition)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
</scheme>
        <_label>Print with Ambitus</_label>
        <_tooltip>Prints the score printing the range (ambitus) of each part at the start of the staff</_tooltip>
      </row>
    </map>
  </merge>
</Denemo>
