<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <after>ReloadDrumHash</after>
        <action>ConvertDrum2GmSingleSelection</action>
        <scheme>(define (ConvertDrumGm2UserSingleNote)

 (define newList (string-tokenize(d-GetNotes)) )
 
 (let transformChordList ((i 0))
  (if (&lt;= i (-(length newList )1)) 
      (begin
        (set! newList (replace-nth newList i (hashq-ref DrumHash (string-&gt;symbol (list-ref newList i)))))
        (transformChordList (+ i 1)))
))

(if (d-GetNotes)
(begin
	(if (defined? 'DrumHash)
	  (d-ChangeChordNotes (string-join newList))
	  (begin 
	    (display "\nNo DrumHash existent. Force Reload!\n")
	    (d-ReloadDrumHash)
	    (d-ChangeChordNotes (string-join newList))
	  )
	)
#t
)
#f
)

)

(SingleAndSelectionSwitcher "(ConvertDrumGm2UserSingleNote)"  "(ConvertDrumGm2UserSingleNote)")
(d-RefreshDisplay)

</scheme>
        <label>Convert GM-Drum to User-Drum</label>
        <tooltip>Converts between the midi-drum notation and a user-drum notation. The user can set his/her drummap in a template in ~/.denemo/templates or choose any other copy he made of the template file to have drummaps for different drummers avaible.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
