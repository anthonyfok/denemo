<?xml version="1.0"?>
<Denemo>
  <merge>
    <title>A Denemo Keymap</title>
    <author>AT, JRR, RTS</author>
    <map>
      <row>
        <action>ZoomDialog</action>
        <scheme>(let ((scale "100"))
	(set! scale		
	(d-GetUserInput "Scale Display" "Give % scaling required" "100"))
	(if (string? scale)
		(begin
			(set! scale (/ (string-&gt;number scale) 100.0))
			(format #t "Scaling by ~A~%" scale)
			(d-Zoom scale)
			(d-RefreshDisplay);;;FIXME refresh display without marking score as changed?
			)))</scheme>
        <label>Set Display Scale</label>
        <tooltip>Scales the display by value given by user.</tooltip>
      </row>
    </map>
  </merge>
</Denemo>
